<Window x:Class="PasswordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordGenerator"
        mc:Ignorable="d"
        Title="Генератор паролей" Height="250" Width="400">
    <Grid Height="195" Background="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}">

        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Сгенерированный пароль" FontSize="16" VerticalAlignment="Top" RenderTransformOrigin="0.569,-2.974"/>
        <TextBox Name="PasswordTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Width="230" FontSize="24" Margin="0,51,0,0" BorderBrush="Black"/>
        <Button Content="Сгенерировать пароль" HorizontalAlignment="Center" Margin="0,103,0,0" VerticalAlignment="Top" Click="GeneratePassword_Click" BorderBrush="Black" Background="White"/>
        <CheckBox Name="IncludeSpecialCharactersCheckBox" Content="Добавить специальные символы" HorizontalAlignment="Center" Margin="0,165,0,0" VerticalAlignment="Top" />
        <Slider Name="PLS" Minimum="6" Maximum="14" Value="10" TickFrequency="1" IsSnapToTickEnabled="True" HorizontalAlignment="Center" Margin="0,142,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock Margin="0,142,269,0" TextWrapping="Wrap" Text="6" Height="16" VerticalAlignment="Top" HorizontalAlignment="Right" Width="6"/>
        <TextBlock Margin="254,142,0,0" TextWrapping="Wrap" Text="14" Height="16" VerticalAlignment="Top" HorizontalAlignment="Left" Width="13"/>

    </Grid>
</Window>
